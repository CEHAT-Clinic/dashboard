rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sensors/{sensorID} {
      allow read: if true;
      allow write: if false;
      
      match /readings/{reading} {
        allow read: if true;
        allow write: if false;
      }
    }
    // Update once authentication is added for admin users
    match /admin-users/ {
      allow read, write: if false;
    }
  }
}
